{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    // 生成声明文件
    "declaration": true,
    // 不生成 .js.map
    "sourceMap": false,
    // 确保换行符一致性
    "newLine": "LF",
    // 开启严格模式（可选）
    "strict": true,
    // 不允许使用js文件
    "allowJs": false,
    // 模块解析策略
    "moduleResolution": "bundler",
    // 启用模块间互操作
    "esModuleInterop": true,
    // 跳过库文件检查（可选）
    "skipLibCheck": true,
    // 删除注释
    "removeComments": false,
    // 允许 import json
    "resolveJsonModule": true,
    // 确保覆盖重写
    "noImplicitOverride": true,
    // 不允许未使用的变量
    "noUnusedLocals": false,
    // 确保文件名大小写一致
    "forceConsistentCasingInFileNames": true,
    // 允许使用类字段
    "useDefineForClassFields": true,
    "types": [
      "vitest/globals",
      "vite/client",
      "node"
    ]
  },
  "include": [
    "**/src/**/*.ts",
    "**/tests/**/*.ts",
    "**/__tests__/**/*.ts",
    "./scripts/*.ts",
    "vite-env.d.ts",
    "packages/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
