{
  "private": true,
  "version": "3.0.0",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "create": "tsx scripts/create-package.ts",
    "build": "tsx scripts/build.ts --test",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "build:utils": "tsx scripts/build.ts utils --test",
    "test:utils": "vitest run --dir packages/utils",
    "test:utils:coverage": "vitest run --dir packages/utils --coverage",
    "build:responsive": "tsx scripts/build.ts responsive --test",
    "test:responsive": "vitest run --dir packages/responsive",
    "test:responsive:coverage": "vitest run --dir packages/responsive --coverage",
    "build:runtime-core": "tsx scripts/build.ts runtime-core --test",
    "test:runtime-core": "vitest run --dir packages/runtime-core",
    "test:runtime-core:coverage": "vitest run --dir packages/runtime-core --coverage",
    "build:runtime-dom": "tsx scripts/build.ts runtime-dom --test",
    "test:runtime-dom": "vitest run --dir packages/runtime-dom",
    "test:runtime-dom:coverage": "vitest run --dir packages/runtime-dom --coverage",
    "build:vitarx": "tsx scripts/build.ts vitarx --test",
    "test:vitarx": "vitest run --dir packages/vitarx",
    "test:vitarx:coverage": "vitest run --dir packages/vitarx --coverage"
  },
  "devDependencies": {
    "@types/node": "^22.17.2",
    "@vitest/coverage-v8": "3.1.1",
    "chalk": "^5.6.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vitest": "^3.2.4"
  }
}
